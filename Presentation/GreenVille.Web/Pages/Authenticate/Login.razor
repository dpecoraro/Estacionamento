@page "/login"
@inject NavigationManager uriHelper

 
<style>

    .top-row {
        display: none !important;
}

    .content {
        margin-left: 18.2px !important;
    }

    .card-body {
        border: none;
    }

    #main-login {
        display: flex;
        justify-content: space-around;
        align-items:center;
    }

    #line-login {
        border-right: 1px solid #000;
        height: 500px;
        text-align: center;
    }

    .input-label-login {
        font-size: 0.7500em;
        font-weight: 600;
    }

    .input-text-group-login {
        padding-bottom: 10px;
    }

    .form-control {
        width: 300px;
        height: 45px;
        margin: 8px 0;
        padding: 8px;
        transition: .3s;
    }

    .btn-success{
        width: 300px;
        margin-top: 10px;
    }


</style>
  
    <EditForm Model="_usuarioAuthentication" OnValidSubmit="ExecuteLogin" class="card card-body mt-5">
        <DataAnnotationsValidator />
        <div id="main-login">
            <div id="logotype-login">
                <img src="/images/logo-greenpark.png" asp-append-version="true" width="300px" />
            </div>

            <div id="line-login">
            </div>
            
            <div id="form-login">
                <div>
                    <div>
                        <label for="email" class="input-label-login">Email:</label>
                    </div>

                    <div class="input-text-group-login">
                        <InputText id="email" class="form-control" @bind-Value="_usuarioAuthentication.Email" />
                        <ValidationMessage For="@(() => _usuarioAuthentication.Email)" />
                    </div>
                </div>

                <div>
                    <div>
                        <label for="password" class="input-label-login">Password:</label>
                    </div>
                 
                    <div class=" input-text-group-login">
                        <InputText type="password" id="password" class="form-control" @bind-Value="_usuarioAuthentication.Password" />
                        <ValidationMessage For="@(() => _usuarioAuthentication.Password)" />
                    </div>
                </div>
                <div>
                    <div>
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>
                </div>
            </div>
        </div>

        
        @if (ShowAuthError)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" @onclick="@(() => ErrorMessage = string.Empty)">×</button>
                <strong>Erro!</strong> @ErrorMessage
            </div>
        }
    </EditForm>

