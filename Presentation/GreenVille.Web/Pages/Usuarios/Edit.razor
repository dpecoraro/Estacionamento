@page "/usuarios/edit/{usuarioId:int}"
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager uriHelper
@attribute [Authorize]

<style>

    .content {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #usuario-title
    {
        text-align: center;
        font-size: 1.3em;
        padding-bottom: 5px;
    }

    #usuario-subtitle
    {
        text-align: center;
        font-size: 0.90em;
        font-weight: 500;
        color: rgb(94, 94, 94);
        padding-bottom: 15px;
    }

</style>


<div id="main-usuario-create">
    <div>
        <h2 id="usuario-title">Editar Usuário</h2>
        <p id="usuario-subtitle">Informe os dados abaixo para editar o usuário</p>
    </div>
    <div>
        <FormUsuarios usuario="@usuario" OnValidSubmit="@EditUsuario" ErrorMessage="@ErrorMessage" />
    </div>
</div>
